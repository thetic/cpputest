{
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "version": 3,
  "configurePresets": [
    {
      "name": "defaults",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_EXTENSIONS": false,
        "CMAKE_CXX_EXTENSIONS": false,
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "environment": {
        "CFLAGS": "-Wall -Wextra -Werror",
        "CXXFLAGS": "-Wall -Wextra -Werror"
      }
    },
    {
      "name": "clang",
      "inherits": ["gcc"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "gnu-arm-embedded",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "arm-none-eabi-gcc",
        "CMAKE_CXX_COMPILER": "arm-none-eabi-g++",
        "CMAKE_C_FLAGS_INIT": "-mcpu=cortex-m4",
        "CMAKE_CXX_FLAGS_INIT": "-mcpu=cortex-m4",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-specs=nano.specs --specs=rdimon.specs",
        "CMAKE_SYSTEM_NAME": "Generic-ELF",
        "CMAKE_SYSTEM_PROCESSOR": "cortex-m4",
        "CPPUTEST_DISCOVER": false
      }
    },
    {
      "name": "openwatcom",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "DOS",
        "CMAKE_SYSTEM_PROCESSOR": "I86",
        "CMAKE_C_COMPILER": "wcl",
        "CMAKE_C_FLAGS_INIT": "-zm -ml -d0",
        "CMAKE_CXX_COMPILER": "wcl",
        "CMAKE_CXX_FLAGS_INIT": "-zm -ml -xds -d0",
        "CPPUTEST_STD_CPP": false,
        "CPPUTEST_DISCOVER": false
      }
    },
    {
      "name": "no-extensions",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CPPUTEST_EXTENSIONS": false
      }
    },
    {
      "name": "no-long-long",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CPPUTEST_USE_LONG_LONG": false
      }
    },
    {
      "name": "no-std-cpp",
      "inherits": ["gcc"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_INIT": "-nostdinc++ -fno-rtti -fno-exceptions",
        "CPPUTEST_STD_CPP": false
      }
    },
    {
      "name": "mingw",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
        "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-static",
        "CMAKE_CROSSCOMPILING_EMULATOR": "wine"
      }
    }
  ]
}
