{
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "version": 3,
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "build/${presetName}",
      "generator": "Ninja"
    },
    {
      "name": "gcc",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "no long long",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CPPUTEST_USE_LONG_LONG": false
      }
    },
    {
      "name": "no stdc",
      "inherits": ["gcc"],
      "cacheVariables": {
        "CMAKE_C_FLAGS_INIT": "-nostdinc",
        "CMAKE_CXX_FLAGS_INIT": "-nostdinc -nostdinc++ -fno-exceptions -fno-rtti",
        "CPPUTEST_STD_C": false
      }
    },
    {
      "name": "mingw",
      "inherits": ["defaults"],
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
        "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-static",
        "CMAKE_CROSSCOMPILING_EMULATOR": "wine"
      }
    }
  ]
}
